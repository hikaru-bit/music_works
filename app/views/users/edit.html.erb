<h2>User Info</h2>
        <%= form_with model:@user, local: true do |f| %>
          <h4>名前</h4>
          <%= f.text_field :name %>

          <h4>プロフィール画像</h4>
          <%= f.attachment_field :profile_image %>

          <h4>Introduction</h4>
          <%= f.text_area :introduction %><br>
          <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User"><br>
        <% end %>

 <%= link_to "退会する", users_confirm_path, {class: "btn btn-danger"} %>
