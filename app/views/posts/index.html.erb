<div class="card-list-containar py-4">
<% @posts.each do |post| %>
 <div class="post-card mx-auto mt-3 shadow-lg bg-secondary">
　<div class="post-content font-weight-bold">
 <p class><i class="fas fa-user pr-2" style="top:0px"></i>投稿者：<%= post.user.name %></p>
 <%= link_to user_path(post.user.id) do %>
  <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, format:'jpg', fallback: "no_image.jpg" %>
  <% end %>
<%= link_to post_path(post.id) do %>
  <p class="text-white">■タイトル：<%= post.title %></p>
<% end %>
<% post.tags.each do |tag| %>
   <p>■タグ：#<%= tag.name %></p>
<% end %>
  <p>■カテゴリー：<%= post.is_recruitment %></p>
  <p>■オンラインについて：<%= post.is_online %></p>
  <p class="pb-3"> ♡<%= post.favorites.count %> いいね </p>
  </div>
</div>
<% end %>
</div>